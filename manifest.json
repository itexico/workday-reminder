{
  "name": "Improving Workday Reminder",
  "version": "1.0.0",
  "description": "Chrome extension that reminds you to fill workday",
  "action": {
    "default_popup": "views/workday.html",
    "default_icon": "icons/clock.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "notifications",
    "tts",
    "alarms"
  ],
  "host_permissions": ["https://*/myworkday.com"],
  "background": {
    "service_worker": "js/service.js"
  },
  "icons": {
    "128": "icons/clock.png"
  },
  "manifest_version": 3
}
